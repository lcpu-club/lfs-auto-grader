{
  "label": "lfs",
  "solution": {
    "description": "LFS Assignment 1 - Basics",
    "languages": ["python"]
  },
  "judge": {
    "adapter": "lfs1",
    "config": {
      "image": "crmirror.lcpu.dev/lfs/lfs-judge:latest",
      "pre_cmd": [],
      "docker_cmd": ["bash", "/run.sh"],
      "post_cmd": [],
      "timeout": 600,
      "memoryLimit": 4096,
      "cpuLimit": 8.0,
      "env": {
        "PYTHONUNBUFFERED": "1",
        "UV_CACHE_DIR": "/uv-cache"
      },
      "workDir": "/home/judge",
      "mounts": [
        {
          "source": "/data/lfs-tests/lfs-1",
          "target": "/lfs-tests",
          "readOnly": true
        },
        {
          "source": "/data/lfs-scripts/lfs-1.sh",
          "target": "/run.sh",
          "readOnly": true
        },
        {
          "source": "/data/lfs-uv",
          "target": "/uv-cache",
          "readOnly": false
        }
      ],
      "variables": {
        "report_path": "/home/judge/report.json"
      }
    }
  },
  "submit": {
    "maxSize": 10485760,
    "allowedExtensions": [".tar.gz", ".zip"]
  }
}
